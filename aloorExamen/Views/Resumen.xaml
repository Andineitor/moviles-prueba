<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aloorExamen.Views.Resumen"
             Title="Resumen">
    <VerticalStackLayout
        Padding="20"
        Spacing="20">
        
        <Label x:Name="lblUsuario"
       FontSize="16"
       TextColor="red"
       HorizontalTextAlignment="End"/>

        <Label 
            Text="RESUMEN"
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="22"
            TextColor="Green"/>

        <Grid >
            <!--//FILAS-->
            <Grid.RowDefinitions >
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>

            </Grid.RowDefinitions>

            <!--//COLUMNAS-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Label Text="Nombre"
            FontSize="15"
            Grid.Row="1"
            Grid.Column="0"/>

            <Label Text="Apellido"
            FontSize="15"
            Grid.Row="2"
            Grid.Column="0"/>

            <Label Text="VA"
            FontSize="15"
            Grid.Row="2"
            Grid.Column="0"/>

            <Label Text="Fecha"
            FontSize="15"
            Grid.Row="2"
            Grid.Column="0"/>

        </Grid>
        
        
    </VerticalStackLayout>
</ContentPage>